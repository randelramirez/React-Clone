# Frontend Environment Variables Template
# Copy this file to .env and update the values as needed

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# For local development:
VITE_API_URL=http://localhost:3001

# For production:
# VITE_API_URL=https://api.your-domain.com

# For staging:
# VITE_API_URL=https://api-staging.your-domain.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application name
# VITE_APP_NAME=ReactSlack

# Application version
# VITE_APP_VERSION=1.0.0

# Application environment
# VITE_NODE_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
# VITE_ENABLE_FILE_UPLOAD=true
# VITE_ENABLE_VOICE_MESSAGES=false
# VITE_ENABLE_VIDEO_CALLS=false
# VITE_ENABLE_DARK_MODE=true
# VITE_ENABLE_NOTIFICATIONS=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Enable development tools in production
# VITE_ENABLE_DEVTOOLS=false

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Firebase configuration (if using Firebase for file storage)
# VITE_FIREBASE_API_KEY=your-firebase-api-key
# VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Giphy API key (for GIF integration)
# VITE_GIPHY_API_KEY=your-giphy-api-key

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Default theme
# VITE_DEFAULT_THEME=light

# Maximum message length
# VITE_MAX_MESSAGE_LENGTH=2000

# Maximum file size for uploads (in MB)
# VITE_MAX_FILE_SIZE_MB=10

# Supported file types
# VITE_SUPPORTED_FILE_TYPES=image/*,application/pdf,.doc,.docx,.txt

# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================

# Socket.IO connection timeout (ms)
# VITE_SOCKET_TIMEOUT=20000

# Socket.IO reconnection attempts
# VITE_SOCKET_RECONNECTION_ATTEMPTS=5

# Socket.IO reconnection delay (ms)
# VITE_SOCKET_RECONNECTION_DELAY=1000

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Number of messages to load per page
# VITE_MESSAGES_PER_PAGE=50

# Auto-save draft interval (ms)
# VITE_AUTO_SAVE_INTERVAL=2000

# Cache expiry time (ms)
# VITE_CACHE_EXPIRY=300000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable React Query DevTools
# VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable console logging
# VITE_ENABLE_CONSOLE_LOGS=true

# Mock API responses (for development without backend)
# VITE_MOCK_API=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# For production deployment, consider:
# - Setting VITE_NODE_ENV=production
# - Disabling development tools
# - Setting up proper analytics
# - Configuring error tracking
# - Setting appropriate cache policies
# - Enabling service worker for PWA features

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Content Security Policy settings
# VITE_CSP_REPORT_URI=https://your-domain.com/csp-report

# Enable HTTPS enforcement
# VITE_FORCE_HTTPS=true

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language
# VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
# VITE_SUPPORTED_LANGUAGES=en,es,fr,de

# =============================================================================
# IMPORTANT NOTES
# =============================================================================

# 1. Only environment variables prefixed with VITE_ are exposed to the client
# 2. Never put sensitive data in frontend environment variables
# 3. Frontend env vars are embedded in the build and are publicly accessible
# 4. Use different .env files for different environments (.env.local, .env.production, etc.)
